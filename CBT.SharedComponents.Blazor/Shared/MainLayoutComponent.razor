@inherits LayoutComponentBase

@using CBT.SharedComponents.Blazor.Shared;

@inject BaseAuthenticationStateProvider AuthenticationStateProvider

<PageTitle>ПСИОНИК</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenuComponent />
    </div>

    <main>
        <div class="top-row px-4">
            <NavLink class="nav-link" href="common/cognitive-errors">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Когнитивные ошибки
            </NavLink>
            <NavLink class="nav-link" href="diary/three-columns/example" title="Техника трех колонок">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Примеры проработок 1
            </NavLink>
            <NavLink class="nav-link" href="diary/automatic-thoughts/example" title="Дневник автоматических мыслей">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Примеры проработок 2
            </NavLink>
            <CascadingAuthenticationState>
                <AuthorizeView>
                    <Authorized>
                        <NotificationsOneTimeComponent />
                        Здравствуйте, @context.User?.Identity?.Name 
                        <NavLink class="nav-link" href="account/logout" title="Выход">
                            <span class="oi oi-box-arrow-left" aria-hidden="true"></span> Выход
                        </NavLink>
                    </Authorized>
                    <NotAuthorized>
                        <NavLink class="nav-link" href="account/login" title="Вход">
                            Вход
                        </NavLink>
                        <NavLink class="nav-link" href="account/register" title="Регистрация">
                            Регистрация
                        </NavLink>
                    </NotAuthorized>
                </AuthorizeView>
            </CascadingAuthenticationState>
        </div>

        <article class="content px-4">
            <ErrorBoundary>
                @Body
            </ErrorBoundary>
            <Syncfusion.Blazor.Popups.SfDialogProvider />
        </article>
    </main>
</div>
